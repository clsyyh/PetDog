<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.PetDog.dao.QuestionDao">
    <select id="selectById" resultMap="questionResultMap">
        SELECT *
        FROM question
        WHERE id=#{id}
    </select>
    <select id="findAll" resultMap="questionResultMap">
        SELECT *
        FROM question
    </select>
    <resultMap id="questionResultMap" type="Question">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="date" column="date"/>
        <result property="count" column="count"></result>
        <association property="user" javaType="User"
                     column="user_id" select="org.PetDog.dao.UserDao.findUserById"
                     fetchType="eager"/>
        <collection property="comments" javaType="ArrayList" ofType="Comment"
                    column="id" select="org.PetDog.dao.CommentDao.selectByQuestionId"
                    fetchType="lazy">
        </collection>
    </resultMap>
    <sql id="key">
        <trim suffixOverrides=",">
            <if test="title!=null">
                title,
            </if>
            <if test="content!=null">
                content,
            </if>
            <if test="user!=null">
                user_id,
            </if>
        </trim>
    </sql>
    <sql id="value">
        <trim suffixOverrides=",">
            <if test="title!=null">
                #{title},
            </if>
            <if test="content!=null">
                #{content},
            </if>
            <if test="user!=null">
                #{user.id},
            </if>
        </trim>
    </sql>
    <insert id="addQuestion" parameterType="Question">
        INSERT INTO  question(<include refid="key"/>)
        values(<include refid="value"/>);
    </insert>
</mapper>